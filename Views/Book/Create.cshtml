@using BookLibrary.Entities
@model BookLibrary.Models.Books.CreateVM;
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "CREATE BOOK";
}

<section id="create-page" class="create">
    <form id="create-form" action="/Book/Create" method="post">
        <fieldset>
            <legend>Add book</legend>
            <p class="field">
                <label for="title">Title</label>
                <span class="input">
                    @Html.TextBoxFor(m => m.Heading)
                </span>
            </p>
            <p class="field">
                <label for="description">Author</label>
                <span class="input">
                    @Html.TextBoxFor(m => m.Author)
                </span>
            </p>
            <p class="field">
                <label for="description">Pages</label>
                <span class="input">
                    <input name="Pages">
                </span>
            </p>

            <p class="field">
                <label for="description">Description</label>
                <span class="input">
                    @Html.TextAreaFor(m => m.Summary.Content)
                </span>
            </p>

            <p class="field">
                <label for="image">Image</label>
                <span class="input">
                    @Html.TextBoxFor(m => m.Image.Url)
                </span>
            </p>
            <p class="field">
                <label for="image">Genre</label>
                <span class="input">
                    <select name="GenreId">
                        @foreach (var item in Model.GenreCollection)
                        {
                            <option value="@item.Id">
                                @item.Name
                            </option>
                        }
                    </select>
                </span>

            </p>

            <p class="field">
                <label for="description">Release Date</label>
                <span class="input">
                    Date: <input type="datetime-local" id="myLocalDate" name="ReleaseDate">
                    <p>Click the button to set a local date and time for the datetime field.</p>

                </span>
            </p>
            
            <p class="field">
                <label for="description">Quantity</label>
                <span class="input">
                    <input name="Quantity">
                </span>
            </p>
            <input class="button submit" type="submit" value="Save">
        </fieldset>
    </form>
</section>