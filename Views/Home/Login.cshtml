@using BookLibrary.ExtentionMethods
@using BookLibrary.Entities 
@model BookLibrary.Models.Home.LoginVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Login";
    User loggedUser = this.ViewContext.HttpContext.Session.GetObject<User>("loggedUser");
}

<!-- Login Page ( Only for Guest users ) -->
<section id="login-page" class="login">
    <form id="login-form" action="/Home/Login" method="post">
        <fieldset>
            <legend>Login Form</legend>
            <p class="field">
                <label for="username">@Html.LabelFor(n => n.Username)</label>
                <span class="input">
                    <div id="email">
                        @Html.TextBoxFor(n => n.Username)
                    </div>
                </span>
            </p>
            <p class="field">
                <label for="password">@Html.LabelFor(n => n.Password)</label>
                <span class="input">
                    <div id="password">
                        @Html.PasswordFor(n => n.Password)
                    </div>
                </span>
            </p>
            <input class="button submit" type="submit" value="Login">
        </fieldset>
    </form>
</section>